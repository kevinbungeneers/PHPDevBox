#======================= Global Settings =====================================
#{{ ansible_managed }}
[global]
 workgroup = {{ smb_workgroup }}
 server string = Samba Server %v
 netbios name = PHPacker
 security = user
 map to guest = Bad user
 dns proxy = no
#============================ Share Definitions ==============================
#### Public Share ####
{% for nginx_site in nginx_sites %}
 [{{ nginx_site.site.name }}]
 path = {{ nginx_www_dir }}/{{ nginx_site.site.name }}
 browsable = yes
 writable = yes
 guest ok = yes
 read only = no
 force user = vagrant
 force group = vagrant
{% endfor %}
